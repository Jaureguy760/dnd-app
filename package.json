{
  "name": "the-silmarillion-dungeon-master",
  "version": "1.0.0",
  "description": "Tolkien-themed Dungeon Generator with DM and Player views",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "dnd",
    "dungeon",
    "generator",
    "tabletop",
    "tolkien",
    "silmarillion"
  ],
  "author": "Dungeon Master",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dungeon-generator": "^0.0.1",
    "rot-js": "^2.2.1"
  },
  "build": {
    "appId": "com.tolkien.dungeon-master",
    "productName": "The Silmarillion Dungeon Master",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dm-view.html",
      "player-view.html",
      "js/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": "dir",
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "icons/icon_512x512.png"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
